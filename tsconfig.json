{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "types": [
      "bluebird-global",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "examples",
    "dist",
    "test"
  ]
}
